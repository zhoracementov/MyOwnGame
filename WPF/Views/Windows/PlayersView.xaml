                    CornerRadius="5"
                    Margin="2, 2">
                <UniformGrid Rows="3">
                    <TextBlock Text="{Binding CurrentPlayer.Score}"
                                   FontSize="30"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
