<UserControl x:Class="WPF.Views.Windows.QuestionsTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Views.Windows"
             mc:Ignorable="d"
             DataContext="{Binding QuestionsTableViewModel, Source={StaticResource ViewModelsLocator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding QuestionsTable.GameItemsLinear}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid DataContext="{Binding}"
                                 Rows="{Binding QuestionsTableViewModel.QuestionsTable.SizeX, Source={StaticResource ViewModelsLocator}}"
                                 Columns="{Binding QuestionsTableViewModel.QuestionsTable.SizeY, Source={StaticResource ViewModelsLocator}}">
                    </UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Wheat" Margin="5">
                        <TextBlock Text="{Binding Title}" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
   </Grid>
</UserControl>
